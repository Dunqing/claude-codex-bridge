{
  "name": "claude-codex-bridge",
  "version": "0.1.0",
  "description": "Bidirectional MCP server bridge between Claude Code and Codex CLI",
  "type": "module",
  "bin": {
    "claude-codex-bridge-codex": "./dist/codex-server.js",
    "claude-codex-bridge-claude": "./dist/claude-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev:codex-server": "tsx src/codex-server.ts",
    "dev:claude-server": "tsx src/claude-server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "keywords": [
    "mcp",
    "claude",
    "codex",
    "bridge",
    "ai"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}

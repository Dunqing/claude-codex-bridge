{
  "name": "claude-codex-bridge",
  "version": "0.2.1",
  "description": "Bidirectional MCP server bridge between Claude Code and Codex CLI",
  "keywords": [
    "ai",
    "bridge",
    "claude",
    "codex",
    "mcp"
  ],
  "homepage": "https://github.com/Dunqing/claude-codex-bridge#readme",
  "bugs": {
    "url": "https://github.com/Dunqing/claude-codex-bridge/issues"
  },
  "license": "MIT",
  "author": "Dunqing <dengqing0821@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dunqing/claude-codex-bridge.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Dunqing"
  },
  "bin": {
    "ccb-claude": "./dist/claude-server.mjs",
    "ccb-codex": "./dist/codex-server.mjs",
    "claude-codex-bridge": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "agents"
  ],
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev:codex-server": "tsx src/codex-server.ts",
    "dev:claude-server": "tsx src/claude-server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint --type-check",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check src/ test/",
    "publint": "publint",
    "prepublishOnly": "pnpm build",
    "release": "bumpp",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "bumpp": "^10.4.1",
    "husky": "^9.1.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "publint": "^0.3.17",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.29.2"
